{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/scripts/${fileBasenameNoExtension}.ts",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "build",
            "outDir": "${workspaceRoot}/dist"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "ava",
