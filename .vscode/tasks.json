{
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "args": ["run"],
    "tasks": [
        {
            "taskName": "compile",
            "problemMatcher": "$tsc-watch",
            "showOutput": "always",
            "args": ["--", "--sourceMap", "--watch"],
            "isBuildCommand": true,
            "isBackground": true
        },
        {
            "taskName": "test",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "isTestCommand": true
        }
    ]
}