            "args": [
                "${fileDirname}/${fileBasenameNoExtension}.js"
            ]
        },
        {
            "name": "test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/ava/profile.js",
            "stopOnEntry": false,
            "args": ["dist/test/generated-tests.js"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": ".",
            "outDir": "${workspaceRoot}/dist"
        }
    ]
}