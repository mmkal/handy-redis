{
    "version": "2.0.0",
    "command": "npm",
    "args": ["run"],
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "compile",
                "--",
                "--sourceMap",
                "--watch"
            ],
            "isBackground": true,
            "problemMatcher": "$tsc-watch",
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "test"
            ],
            "isBackground": true,
            "problemMatcher": "$tsc-watch",
            "group": "test"
        }
    ]
}